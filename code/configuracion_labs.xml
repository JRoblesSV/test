<?xml version="1.0" encoding="UTF-8" ?>
<ConfiguracionLaboratorios>
    <URLs>
        <url_calendario name="url_calendario">https://www.etsidi.upm.es/Estudiantes/AgendaAcademica/AACalendario</url_calendario> <!-- seleccionar pdf -> Calendario Títulos de Grado-->
        <url_horario name="url_asignaturas">https://www.etsidi.upm.es/Estudiantes/AgendaAcademica/AAHorarioClases</url_horario> <!-- seleccionar pdf -> Primer semestre /o/ Segundo semestre-->
        <url_profesores name="url_profesores">http://programas.etsidi.upm.es/SOA/profesores/</url_profesores>
    </URLs>

    <Directorios>
        <directorio_output name="directorio_resources">resources/</directorio_output>
        <directorio_exportar name="directorio_export">export/</directorio_exportar>
    </Directorios>

    <HorariosLaboratorio> <!-- estos datos depende de los laboratorios, se tendría que obtener de horario -->
        <hora_inicio name="hora_inicio">8:00</hora_inicio>
        <hora_fin name="hora_fin">20:00</hora_fin>
        <duracion_clase name="duracion_clase">02:00</duracion_clase>
        <descanso_almuerzo name="hora_inicio_descanso">14:00</descanso_almuerzo>
        <fin_descanso name="hora_fin_descanso">15:00</fin_descanso>
    </HorariosLaboratorio>

    <ParametrosOptimizacion>
        <peso_grupos_pares name="peso_grupos_pares">10</peso_grupos_pares>
        <peso_conflictos_alumnos name="peso_conflictos_alumnos">20</peso_conflictos_alumnos>
        <peso_disponibilidad_profesor name="peso_disponibilidad_profesor">15</peso_disponibilidad_profesor>
        <peso_capacidad_laboratorio name="peso_capacidad_laboratorio">25</peso_capacidad_laboratorio>
        <peso_compatibilidad_asignatura name="peso_compatibilidad_asignatura">30</peso_compatibilidad_asignatura>
        <peso_grupos_iguales name="peso_grupos_iguales">30</peso_grupos_iguales> <!-- que un grupo no tenga 20 y otro 10 -->
    </ParametrosOptimizacion>

    <Laboratorios> <!-- a determinar segun el aula, se asigna max por aula -->
        <capacidad_maxima name="capacidad_maxima">24</capacidad_maxima>
        <equipamiento_requerido name="equipamiento_requerido">True</equipamiento_requerido>
    </Laboratorios>

    <Opciones>
        <headless name="headless">True</headless>
        <multiprocessing name="multiprocessing">True</multiprocessing>
        <debug_mode name="debug_mode">False</debug_mode>
    </Opciones>

    <Semestres>
        <primer_semestre name="primer_semestre">Septiembre-Enero</primer_semestre>
        <segundo_semestre name="segundo_semestre">Febrero-Junio</segundo_semestre>
    </Semestres>
</ConfiguracionLaboratorios>